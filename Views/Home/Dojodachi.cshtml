@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <div class="row mt-5">
        <div class="col-3 stat">
            <p>Fullness: @ViewBag.Fullness</p>
        </div>
        <div class="col-3 stat">
            <p>Happiness: @ViewBag.Happiness</p>
        </div>
        <div class="col-3 stat">
            <p>Meals: @ViewBag.Meals</p>
        </div>
        <div class="col-3 stat">
            <p>Energy: @ViewBag.Energy</p>
        </div>
    </div>
    <div class="row">
        <div class="col"></div>
        <div class="col-4" id="dojogachi">
            @if (ViewBag.Happiness < 0 || ViewBag.Fullness < 0)
            {
                <h1>x_x</h1>
            }
            else if (ViewBag.Happiness > 20)
            {
                <h1>^_^</h1>
            }
            else
            {
                <h1>-_-</h1>
            }
            
            <p>@ViewBag.Message</p>
        </div>
        <div class="col"></div>
    </div>

    @if (ViewBag.IsRestart != null && ViewBag.IsRestart)
    {
        <div class="row mt-3">
            <div class="col">
                <a href="/dojodachi/reset">
                    <button>
                        Reset
                    </button>
                </a>
            </div>
        </div>
    }
    else 
    {
        <div class="row mt-3">
            <div class="col">
                <a href="/dojodachi/feed">
                    <button>
                        Feed
                    </button>
                </a>

                <a href="/dojodachi/play">
                    <button>
                        Play
                    </button>
                </a>

                <a href="/dojodachi/work">
                    <button>
                        Work
                    </button>
                </a>

                <a href="/dojodachi/sleep">
                    <button>
                        Sleep
                    </button>
                </a>
            </div>
        </div>
    }
    
</div>
